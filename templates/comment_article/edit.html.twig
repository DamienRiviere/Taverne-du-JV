{# Page d'édition d'un commentaire #}

{% extends 'base.html.twig' %}

{% block title %}Édition du commentaire de {{ comment.user.username }}{% endblock %}

{% block body %}

    <div class="container white pb-3">
        <div class="row">
        
            <div class="col-8">
                <h2 class="card-header orange accent-3 text-white mt-3 mb-3 h3 font-weight-light"><i class="fas fa-angle-down"></i> Votre commentaire</h2>

                {% include 'partials/comment_article.html.twig' %}

                <div class="alert blue-grey lighten-5">
                    {{ form_start(form) }}

                    {{ form_widget(form) }}

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Modifier le commentaire</button>
                    </div>
                        
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="col-4">
                {% include 'partials/last_tests.html.twig' %}
                {% include 'partials/last_previews.html.twig' %}
                {% include 'partials/forums.html.twig' %}
            </div>

        </div>
    </div>

{% endblock %}