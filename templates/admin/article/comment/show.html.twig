{% extends 'admin/base.html.twig' %}

{% block title %}Commentaires de l'article {{ article.title }}{% endblock %}

{% block body %}

<div class="container-fluid">
    <h2 class="my-4">
        <a href="{{ path('admin_articles_index') }}" class="mr-2" title="Retour à la liste des articles">
            <i class="fas fa-arrow-circle-left"></i>
        </a>
        Commentaires de l'article {{ article.title }}
    </h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Commentaire</th>
                <th>Date de création</th>
                <th>Statut</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            {% for comment in article.commentArticle | reverse %}
            {% set user = comment.user %}
            <tr>
                <td><strong>{{ comment.id }}</strong></td>
                <td>
                    <img src="{{ user.picture }}" alt="Avatar de {{ user.username }}" class="avatar avatar-micro mr-2">
                    <strong>{{ user.username }}</strong>
                </td>
                <td>{{ comment.content | raw | slice(3, 80) }} ...</td>
                <td>{{ comment.createdAt | date('d/m/Y') }} à {{ comment.createdAt | date('H:i') }}</td>
                {% if comment.moderation.statut == "Commentaire publié" %}
                    <td class="font-weight-bold text-success">{{ comment.moderation.statut }}</td>
                {% elseif comment.moderation.statut == "Commentaire signalé" %}
                    <td class="font-weight-bold text-danger">{{ comment.moderation.statut }}</td>
                {% elseif comment.moderation.statut == "Commentaire modéré" %}
                    <td class="font-weight-bold text-warning">{{ comment.moderation.statut }}</td>
                {% endif %}
                <td>
                    <a href="{{ path('admin_articles_comments_edit', {'idArticle': article.id, 'idComment': comment.id}) }}" class="btn btn-md btn-primary" title="Modifier le commentaire">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ path('admin_articles_comments_delete', {'idArticle': article.id, 'idComment': comment.id}) }}" class="btn btn-md btn-danger" title="Supprimer le commentaire">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}