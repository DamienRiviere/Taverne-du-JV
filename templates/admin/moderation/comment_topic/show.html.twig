{# Page d'un commentaire signalé d'un topic #}

{% extends 'admin/base.html.twig' %}

{% block title %}Commentaire de {{ comment.user.username }}{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h2 class="my-4">
            <a href="{{ path('admin_comment_topic_index') }}" class="mr-2" title="Retour à la liste des commentaires">
                <i class="fas fa-arrow-circle-left"></i>
            </a>
            Commentaire de {{ comment.user.username }}
        </h2>

        <div class="row">
            <div class="col-7">

                <div class="alert blue-grey lighten-5">
                    <h2 class="text-danger font-weight-bold">{{ comment.moderation.statut }}</h2>

                    {% include 'partials/comment_topic/comment.html.twig' %}

                    {{ form_start(form) }}

                    {{ form_widget(form) }}

                    <button type="submit" class="btn btn-success btn-block mb-3">Enregistrer le nouveau statut</button>

                    {{ form_end(form) }}

                </div>

            </div>

            {% set user = comment.user %}
            <div class="col-5">
                    
                {% include 'admin/partials/author.html.twig' %}
                
            </div>
            
        </div>
    </div>

{% endblock %}