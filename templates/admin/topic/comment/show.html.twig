{# Page de détails d'un commentaire d'un topic #}

{% extends 'admin/base.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block body %}

<div class="container-fluid">
    <h2 class="my-4">
        <a href="{{ path('admin_topics_index') }}" class="mr-2" title="Retour à la liste des topics">
            <i class="fas fa-arrow-circle-left"></i>
        </a>
        Liste des commentaires
    </h2>

    {% include('partials/alert.html.twig') %}

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Topic</th>
                <th>Commentaire</th>
                <th>Date de création</th>
                <th>Statut</th>              
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            {% for comment in comments %}
            {% set user = comment.user %}
            {% set topic = comment.topic %}
            <tr>
                <td><strong>{{ comment.id }}</strong></td>
                <td>
                    <img src="{{ user.picture }}" alt="Avatar de {{ user.username }}" class="avatar avatar-micro mr-2">
                    <strong>{{ user.username }}</strong>
                </td>
                <td class="font-weight-bold">{{ topic.title }}</td>
                <td>{{ comment.content | raw | slice(0, 80) }} ...</td>
                <td>{{ comment.createdAt | date('d/m/Y') }} à {{ comment.createdAt | date('H:i') }}</td>
                    {% if comment.moderation.statut == "Commentaire publié" %}
                        <td class="font-weight-bold text-success">{{ comment.moderation.statut }}</td>
                    {% elseif comment.moderation.statut == "Commentaire signalé" %}
                        <td class="font-weight-bold text-danger">{{ comment.moderation.statut }}</td>
                    {% elseif comment.moderation.statut == "Commentaire modéré" %}
                        <td class="font-weight-bold text-warning">{{ comment.moderation.statut }}</td>
                    {% endif %}
                <td>
                    <a href="{{ path('admin_topics_comments_edit', {'idTopic': topic.id, 'idComment': comment.id}) }}" class="btn btn-md btn-primary" title="Modifier le commentaire">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ path('admin_topics_comments_delete', {'idTopic': topic.id, 'idComment': comment.id}) }}" class="btn btn-md btn-danger" title="Supprimer le commentaire">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="my-3 pagination justify-content-center">
        {{ knp_pagination_render(comments) }}
    </div>

</div>

{% endblock %}