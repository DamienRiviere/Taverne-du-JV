<div class="alert blue-grey lighten-5">

    <div class="row align-items-center">

        <div class="col-lg-12 text-center">
            <img src="{{ user.picture }}" class="avatar mb-3" alt="Avatar de {{ user.username }}">
            <br>
            {%  if user.getRoles()[0] == 'ROLE_ADMIN' %}
                <span class="badge badge-danger">
                    ADMINISTRATEUR
                </span>
            {% elseif user.getRoles()[0] == 'ROLE_AUTHOR' %}
                <span class="badge badge-success">
                    AUTEUR
                </span>
            {% elseif user.getRoles()[0] == 'ROLE_MODERATOR' %}
                <span class="badge badge-warning">
                    MODERATEUR
                </span>
            {% elseif user.getRoles()[0] == 'ROLE_USER' %}
                <span class="badge badge-primary">
                    MEMBRE
                </span>
            {%  endif %}
        </div>

        <div class="col-12 text-center mt-1">
            <h2 class="mb-0">{{ user.username }}</h2>
            <small class="text-muted">Inscrit depuis le {{ user.createdAt | date('d/m/Y') }}</small>
        </div>
    </div>

    <hr>

    <h2>Description :</h2>
    {% if user.description == null %}
        <div class="alert alert-warning text-center">
            <h5 class="mb-0">Pas de description</h5>
        </div>
    {% else %}
        {{ user.description | raw }}
    {% endif %}          
</div>