{# Rubrique des 3 dernieres previews #}
<div class="card mt-4">
    <h2 class="card-header red text-white h3 font-weight-light"><i class="fas fa-angle-down"></i> Les derni√®res previews</h2>
    <ul class="list-group">
        {% for preview in previews | slice(0, 3) %}
        <li class="list-group-item">
            <img src="{{ preview.coverImage }}" alt="Image de {{ preview.title }}" class="img-fluid rounded">
            <div class="row mt-2">
                <div class="col-4 d-flex"> 
                    <small class="card-text text-muted">
                    {% for subcategory in preview.subCategories %}
                        <span class="badge {{ subcategory.style }} mr-1">{{ subcategory.title }}</span>           
                    {% endfor %}                          
                    </small>
                </div>
                <div class="col-8">
                    <p class="mb-0"><a href="{{ path('article_show', {'slug': preview.slug}) }}">{{ preview.title }}</a></p>
                </div>
            </div>                        
        </li>
        {% endfor %}
    </ul>
</div>