{# Rubrique des 5 derniers tests #}
<div class="card mt-3">
    <h2 class="card-header red text-white h3 font-weight-light"><i class="fas fa-angle-down"></i> Les derni√®res news</h2>
    <ul class="list-group">
        {% for new in news | slice(0, 5) %}
        <li class="list-group-item">
            <div class="col">
                <p class="mb-0"><a href="{{ path('article_show', {'slug': new.slug}) }}">{{ new.title }}</a></p>
            </div>
            <div class="col d-flex">
                <small class="card-text text-muted">
                {% for subcategory in new.subCategories %}
                    <span class="badge {{ subcategory.style }} mr-1">{{ subcategory.title }}</span>                                   
                {% endfor %}      
                </small>
            </div>                          
        </li>
        {% endfor %}
    </ul>
</div>