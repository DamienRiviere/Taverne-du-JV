{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block body %}

    <div class="container white">
        <div class="row align-items-center pt-3 pb-3">
            <div class="col-3 text-center">
                {% if user.picture == null %}
                    <img src="http://image.jeuxvideo.com/avatar-md/default.jpg" alt="Image de profil par dÃ©faut" class="avatar mb-3"> 
                {% else %}
                    <img src="{{ user.picture }}" class="avatar mb-3" alt="Avatar de {{ user.username }}">
                {% endif %}  
                <br>
                <span class="badge badge-danger">ADMINISTRATEUR</span>
            </div>
            <div class="col-9">
                <h2 class="mb-0">{{ user.username }}</h2>
                <small class="text-muted">Inscrit depuis le {{ user.createdAt | date('d/m/Y') }}</small>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary m-0">Modifier mes informations</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>
        </div>    

        <div class="alert blue-grey lighten-5">
            {% if user.description == null %}
                <h2>Description :</h2>
                <p>Pas de description</p>
            {% else %}
                <h2>Description :</h2>
                {{ user.description | raw }}
            {% endif %}
        </div>

        <div class="row mt-3 pb-3">
            <div class="col-6">
                <div class="alert blue-grey lighten-5">
                    <h2>Derniers articles :</h2>
                    {% if user.articles is empty %}
                        <div class="alert orange accent-3 text-center">
                            <h5 class="mb-0 text-white">Aucun article</h5>
                        </div>
                    {% else %}
                        {% for article in user.articles |slice(0, 5) %}
                        <p>
                            <span class="{{ article.category.style }}">{{ article.category.title }}</span> |
                            {% for subcategory in article.subcategories %}
                                <span class="{{ subcategory.style }}">{{ subcategory.title }}</span>
                            {% endfor %}
                            <a href="{{ path('article_show', {'slug': article.slug}) }}">{{ article.title }}</a> 
                        </p>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="col-6">
                <div class="alert blue-grey lighten-5">
                    <h2>Derniers commentaires :</h2>
                    <div class="alert orange accent-3 text-center">
                        <h5 class="mb-0 text-white">Aucun commentaire</h5>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

{% endblock %}
